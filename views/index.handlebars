<ul id = "uneaten">
    {{#each burgers}}
        {{#unless devoured}}
        
            {{>burgers/burger-block devoured = false}}
        {{/unless}}
    {{/each}}
</ul>

<ul id="eaten">
    {{#each burgers}}
        {{#if devoured}}
        
         {{>burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
</ul>

