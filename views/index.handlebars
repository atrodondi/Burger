<ul id = "uneaten">
    {{#each burgers}}
        {{#unless devoured}}
        {{burger_name}}
            {{>burgers/burger-block devoured = false}}
        {{/unless}}
    {{/each}}
</ul>

<ul id="eaten">
    {{#each burgers}}
        {{#if devoured}}
        {{burger_name}}
         {{>burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
</ul>

<form class ="create-burger">
<div class = "form-group">
    <input type ="text" id="newBurger" name="name">
</div>
<button type="submit">Submit New Burger</button>

</form>
